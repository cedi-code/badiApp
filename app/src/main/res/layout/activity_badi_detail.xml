<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    tools:context="com.example.bgirac.badi.BadiDetailActivity"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:weightSum="1"     >

        <android.support.v7.widget.CardView
            android:layout_width="378dp"
            android:layout_height="170dp"
            map:cardElevation="2dp"
            android:layout_gravity="center">

            <ListView
                android:id="@+id/badidetails"
                android:layout_width="match_parent"
                android:layout_height="428dp"
                android:paddingLeft="20dp"
                android:scrollbars="horizontal" />

        </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="378dp"
        android:layout_height="170dp"
        map:cardElevation="2dp"
        android:layout_gravity="center">

        <ListView
            android:paddingLeft="20dp"
            android:id="@+id/wetter"
            android:layout_width="match_parent"
            android:layout_height="428dp"
            android:scrollbars="horizontal"
            />

    </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="378dp"
            android:layout_height="302dp"
            map:cardElevation="2dp"
            android:layout_gravity="bottom|right">

                <fragment
                    android:id="@+id/map"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:context=".BadiDetailActivity" />
                <Button
                    android:id="@+id/onGoogleMaps"
                    style="@style/ActionButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:text="view on Maps"
                    android:elevation="5dp"/>

        </android.support.v7.widget.CardView>

</LinearLayout>